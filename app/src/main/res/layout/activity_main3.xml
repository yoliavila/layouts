            <Button
                android:id="@+id/button25"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/button22"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/button23"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
